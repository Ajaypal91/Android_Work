<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:padding">10dp</item>
    </style>

    <style name="h2" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">22sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="defaultButton">
        <item name="android:buttonStyle">@android:color/holo_green_dark</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="h1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textScaleX">0.9</item>
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">42sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="h6" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">11dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="h5" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">14dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="h4" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">18sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="h3" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">19sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="bottom_border">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="big" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:textSize">36sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="med" parent="@android:style/TextAppearance.Holo.Widget.ActionMode.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:typeface">monospace</item>-->
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
